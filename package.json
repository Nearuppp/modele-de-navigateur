{
  "name": "browser-template",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "start:electron": "electron .",
    "build:win": "ng build --base-href ./ && electron-builder -w --publish=never",
    "build:mac": "ng build --base-href ./ && electron-builder -m --publish=never",
    "build:linux": "ng build --base-href ./ && electron-builder -l --publish=never"
  },
  "build": {
    "appId": "com.example.browser",
    "productName": "browser-template",
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "dist/browser-template/browser/**/*"
    ],
    "directories": {
      "output": "releases"
    }
  },
  "dependencies": {
    "@angular/animations": "^19.0.0"
  },
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8"
  }
}
